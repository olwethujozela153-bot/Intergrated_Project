@model Intergrated_Project.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Driver Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f4f6f9;
            margin: 0;
            padding: 0;
        }

        header {
            background: #003366;
            color: white;
            padding: 15px;
            text-align: center;
        }

        .dashboard {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            padding: 30px;
        }

        .card {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.2);
            text-align: center;
            transition: 0.3s;
        }

            .card:hover {
                background: #e6f0ff;
                transform: scale(1.05);
            }

            .card h3 {
                margin-bottom: 10px;
                color: #003366;
            }

            .card button {
                padding: 10px 20px;
                border: none;
                border-radius: 5px;
                background: #003366;
                color: white;
                cursor: pointer;
            }

                .card button:hover {
                    background: #0055aa;
                }
    </style>
</head>
<body>
    <header>
        <h1>Driver Dashboard</h1>
    </header>

    <div class="dashboard">
        <div class="card">
            <h3>View Personal Details</h3>
            <button>Open</button>
        </div>
        <div class="card">
            <h3>Track Tickets</h3>
            <button>View</button>
        </div>
        <div class="card">
            <h3>Make Payment</h3>
            <button>Pay Now</button>
        </div>
        <div class="card">
            <h3>Payment History</h3>
            <button>Check</button>
        </div>
    </div>
</body>
</html>


