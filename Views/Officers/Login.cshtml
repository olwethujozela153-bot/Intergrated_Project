    <script>

        class FineModel {
            constructor() {
                this.fines = [];
                this.officers = [];
                this.drivers = [];
                this.vehicles = [];
            }

            addFine(fine) {
                fine.id = this.fines.length + 1;
                fine.issueDate = new Date();
                fine.status = 'unpaid';
                this.fines.push(fine);
                return fine;
            }

            getFines() {
                return this.fines;
            }

            getOfficerById(id) {
                return this.officers.find(officer => officer.id === id);
            }
        }

        class FineController {
            constructor(model) {
                this.model = model;
            }

            issueFine(driverId, vehicleId, violation, amount, officerId) {
                const fine = {
                    driverId,
                    vehicleId,
                    violation,
                    amount,
                    officerId
                };

                return this.model.addFine(fine);
            }

            getFines() {
                return this.model.getFines();
            }
        }


