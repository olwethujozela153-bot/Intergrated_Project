                        badgeNumber: '8345',
                        division: 'Traffic Division'
                    }
                ];
            }

            getRecentFines() {
                return this.fines;
            }

            getOfficerProfile(id) {
                return this.officers.find(officer => officer.id === id);
            }
        }


        document.addEventListener('DOMContentLoaded', function () {
